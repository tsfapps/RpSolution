<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="250dp">
    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ccv_leave"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="match_parent"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="@color/colorPrimary"
        app:compactCalendarTextColor="@color/white"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/blue_transparent"
        app:compactCalendarCurrentDayBackgroundColor="@color/red_transparent"
        app:compactCalendarMultiEventIndicatorColor="@color/white"
        />
    </android.support.v7.widget.CardView>

    <TextView
        android:gravity="center"
        android:text="Slide for next or previous month"
        android:textSize="12dp"
        android:textColor="#949393"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="16dp"
        android:gravity="bottom"
        android:layout_gravity="center_horizontal"
        android:text="Red pointed dates are leave dates"
        android:textSize="12dp"
        android:textColor="@color/red_transparent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>